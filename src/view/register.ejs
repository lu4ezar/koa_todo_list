<h1 class="display-4 mb-4">
	Registration
</h1>
<form action="/register" method="POST">
	<div class="form-group">
		<input type="text" name="username" class="form-control form-control-lg" placeholder="Enter your name">
		<input type="password" name="password" class="form-control form-control-lg" placeholder="Enter your password">
	</div>
	<input type="submit" value="Create your account" class="btn btn-dark btn-lg">
	<a href="/login" class="btn btn-primary btn-lg">Login</a>
</form>